FROM node:20.12.0-alpine3.19

# 1️⃣ Set working directory
WORKDIR /usr/src/app

# 2️⃣ Install pnpm globally
RUN npm install -g pnpm

# 3️⃣ Copy package files first for better caching
COPY package.json pnpm-lock.yaml* turbo.json tsconfig.json ./
COPY apps/excelidraw-frontend/package.json ./apps/excelidraw-frontend/
COPY packages/*/package.json ./packages/*/

# 4️⃣ Install dependencies
RUN pnpm install --frozen-lockfile

# 5️⃣ Copy source code
COPY apps ./apps
COPY packages ./packages

# 6️⃣ Generate Prisma client and build
RUN pnpm run db:generate && \
    pnpm run build

# 7️⃣ Start app
CMD ["pnpm", "run", "start-user-app"]